
include ../mixins/sub-menu.pug

header.header
  .container
    .row.align-items-center
      .col-3
        .inner-logo
          a(href="/")
            img(src=setting.logo, alt="Logo")
      .col-5
        form(
          action="/search"
          method="GET"
        ) 
          div(class="form-group d-flex mb-0")
            input(
              type="text"
              placeholder="Enter key words..."
              class="form-control"
              name="keyword"
              value=keyword
            )
            button(
              type="submit"
              class="btn btn-primary"
            ) Search

      .col-4
        .inner-menu
          ul
            li
              a(href="/") HOME
            li(class="sub-menu")
              a(href="/products") PRODUCTS
              if(layoutCategoryProducts)
                +sub-menu(layoutCategoryProducts)
            li
              a(href="/cart") Cart (#{cartTotal})
            if(user)
              li
                a(href="/user/profile") #{user.fullName}
              li
                a(href="/user/logout") Logout
            else
              li
                a(href="/user/login") Login
              li
                a(href="/user/register") Register

