extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block content
  .container.my-3
    .row
      .col-8.mx-auto
        +box-head(pageTitle)

        
        // Display success and error alerts
        +alert-success(5000) // Display success message for 5 seconds
        +alert-error(5000)   // Display error message for 5 seconds

        form(
          action="/user/login"
          method="POST"
        )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            )
          div(class="form-group")
            label(for="password") Password
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            )
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary btn-block"
            ) Login