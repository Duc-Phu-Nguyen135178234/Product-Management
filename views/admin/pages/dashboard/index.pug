extends ../../layouts/defaults.pug

block content
    h1 General Information

    .row.mt-4
    .col-12
      .card.mb-4
        .card-header Account Information
        .card-body
          if(account.avatar)
            img(
              src=account.avatar
              style="height: 100px;margin-bottom: 15px;"
            )
          if(account.fullName)
            p Full Name: <b>#{account.fullName}</b>
          if(account.email)
            p Email: <b>#{account.email}</b>
          if(account.phone)
            p Phone Number: <b>#{account.phone}</b>
          if(role.title)
            p Role: <b>#{role.title}</b>

    .col-6
      .card.mb-4
        .card-header Product Categories
        .card-body
          p Quantity: <b>5</b>
          p Active: <b>3</b>
          p Inactive: <b>2</b>

    .col-6
      .card.mb-4
        .card-header Products
        .card-body
          p Quantity: <b>#{statistic.product.total}</b>
          p Active: <b>#{statistic.product.active}</b>
          p Inactive: <b>#{statistic.product.inactive}</b>

    .col-6
      .card.mb-4
        .card-header Admin Accounts
        .card-body
          p Quantity: <b>5</b>
          p Active: <b>3</b>
          p Inactive: <b>2</b>

    .col-6
      .card.mb-4
        .card-header Client Accounts
        .card-body
          p Quantity: <b>5</b>
          p Active: <b>3</b>
          p Inactive: <b>2</b>
