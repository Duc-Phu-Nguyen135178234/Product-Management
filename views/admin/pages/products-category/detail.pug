extends ../../layouts/defaults.pug

block content
  if (category.title)
    h1(class="mb-4") #{category.title}

  if (category.thumbnail)
    div(class="mb-4")
      img(
        src=category.thumbnail
        style="width: 100px"
      )

  if (category.description)
    div(class="mb-4") Description: <b>!{category.description}</b>

  if (category.parent_id)
    div(class="mb-4") Parent_id: <b>#{category.parent_id}</b>

  if (category.status)
    div(class="mb-4")
        span Status:
        if (category.status === "active")
            span(class="badge badge-success") active
        else
            span(class="badge badge-danger") inactive
