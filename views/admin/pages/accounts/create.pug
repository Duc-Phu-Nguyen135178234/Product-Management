extends ../../layouts/defaults.pug

block content
  h1(class="mb-4") Add New Account

  form(
    action=`/${prefixAdmin}/accounts/create`
    method="POST"
		enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="fullName") Fullname *
      input(
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
        required
      )
    div(class="form-group")
      label(for="email") Email *
      input(
        type="email"
        class="form-control"
        id="email"
        name="email"
        required
      )
    div(class="form-group")
      label(for="password") Password *
      input(
        type="password"
        class="form-control"
        id="password"
        name="password"
        required
      )
    div(class="form-group")
      label(for="phone") Cellphone
      input(
        type="text"
        class="form-control"
        id="phone"
        name="phone"
      )
    div(
      class="form-group"
      upload-image
    )
      label(for="avatar") Avatar
      input(
        type="file"
        class="form-control-file"
        id="avatar"
        name="avatar"
        accept="image/*"
        upload-image-input
      )
      img(
        src=""
        class="image-preview"
        upload-image-preview
      )
    div(class="form-group")
      label(for="role_id") Roles
      select(name="role_id" id="role_id" class="form-control")
        option(disabled) -- Ch·ªçn --
        each item in roles
          option(value=item.id) #{item.title}
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked
      )
      label(for="statusActive" class="form-check-label") Active
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInActive"
        name="status"
        value="inactive"
      )
      label(for="statusInActive" class="form-check-label") Inactive
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Add