extends ../../layouts/defaults.pug

block content
  h1(class="mb-4") ADD PERMISSION

  form(
    action=`/${prefixAdmin}/roles/create`
    method="POST"
  )
    div(class="form-group")
      label(for="title") TITLE
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
      )
    div(class="form-group")
      label(for="desc") DESCRIPTION
      input(
        type="text"
        class="form-control"
        id="desc"
        name="description"
      )
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) ADD