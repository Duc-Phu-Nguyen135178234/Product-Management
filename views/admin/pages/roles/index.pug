extends ../../layouts/defaults.pug

block content
  h1(class="mb-4") PERMISSION

  .card.mb-3
    .card-header List
    .card-body
      .row
        .col-8
        .col-4.text-right
          a(
            href=`/${prefixAdmin}/roles/create`
            class="btn btn-outline-success"
          ) + ADD

      table(
        class="table table-hover table-sm"
      )
        thead
          tr
            th STT
            th PERMISSION
            th DESCRIPTION
            th ACTIONS

        tbody
          if(records.length > 0)
            each item, index in records
              tr
                td #{index + 1}
                td #{item.title}
                td #{item.description}
                td
                  a(
                    class="btn btn-success mx-2 "
                    href=`/${prefixAdmin}/roles/detail/${item._id}`
                  ) DESCRIPTION
                  a(
                    class="btn btn-warning btn-sm ml-1"
                    href=`/${prefixAdmin}/roles/edit/${item.id}`
                  ) UPDATE
                  button(
                    class="btn btn-danger btn-sm ml-1"
                    button-delete=`/${prefixAdmin}/roles/delete/${item.id}`
                    data-id=item.id
                  ) DELETE
          else
            tr
              td(colspan="4" class="text-center") DO NOT HAVE PERMISSION YET